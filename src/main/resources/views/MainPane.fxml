<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.dawiddc.totalcommander.controllers.MainPaneController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu fx:id="fileMenu" mnemonicParsing="false" text="%file">
                            <items>
                                <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#closeApplication"
                                          text="%file.close"/>
                            </items>
                        </Menu>
                        <Menu fx:id="languageMenu" mnemonicParsing="false" text="%language">
                            <items>
                                <MenuItem fx:id="englishMenuItem" mnemonicParsing="false"
                                          onAction="#changeLanguageToEng" text="%language.english"/>
                                <MenuItem fx:id="polishMenuItem" mnemonicParsing="false"
                                          onAction="#changeLanguageToPolish" text="%language.polish"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar/>
            </children>
        </VBox>
    </top>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <center>
                <HBox spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <ProgressBar fx:id="progressBar" prefWidth="500.0" progress="0.0">
                            <HBox.margin>
                                <Insets top="4.0"/>
                            </HBox.margin>
                        </ProgressBar>
                        <Button fx:id="cancelActionButton" alignment="CENTER_RIGHT" mnemonicParsing="false"
                                text="%cancel"/>
                    </children>
                    <padding>
                        <Insets left="50.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets bottom="5.0" left="50.0" top="5.0"/>
                    </BorderPane.margin>
                </HBox>
            </center>
            <left>
                <Label fx:id="leftLabel" BorderPane.alignment="BOTTOM_LEFT"/>
            </left>
            <right>
                <Label fx:id="rightLabel" BorderPane.alignment="CENTER_RIGHT"/>
            </right>
        </BorderPane>
    </bottom>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <SplitPane dividerPositions="0.5" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <AnchorPane>
                                    <children>
                                        <HBox spacing="10.0">
                                            <children>
                                                <ChoiceBox fx:id="leftRootDropdown" prefWidth="75.0"/>
                                                <Button fx:id="leftRefreshButton" mnemonicParsing="false"
                                                        text="%refresh"/>
                                                <Separator orientation="VERTICAL"/>
                                                <Button fx:id="leftCopyButton" mnemonicParsing="false" text="%copy"/>
                                                <Button fx:id="leftMoveButton" mnemonicParsing="false" text="%move"/>
                                                <Button fx:id="leftDeleteButton" mnemonicParsing="false"
                                                        text="%delete"/>
                                            </children>
                                            <padding>
                                                <Insets left="5.0"/>
                                            </padding>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="3.0" top="3.0"/>
                                    </padding>
                                </AnchorPane>
                                <AnchorPane>
                                    <children>
                                        <Label text="%path" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="5.0"/>
                                        <TextField fx:id="pathLeftField" maxWidth="1.7976931348623157E308"
                                                   AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="5.0"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="3.0"/>
                                    </padding>
                                </AnchorPane>
                                <TableView VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0"
                                                     text="%table.name"/>
                                        <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0"
                                                     text="%table.size"/>
                                        <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0"
                                                     text="%table.date"/>
                                    </columns>
                                </TableView>
                            </children>
                            <padding>
                                <Insets top="3.0"/>
                            </padding>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <AnchorPane>
                                    <children>
                                        <HBox spacing="10.0">
                                            <children>
                                                <ChoiceBox fx:id="rightRootDropdown" prefWidth="75.0"/>
                                                <Button fx:id="rightRefreshButton" mnemonicParsing="false"
                                                        text="%refresh"/>
                                                <Separator orientation="VERTICAL"/>
                                                <Button fx:id="rightCopyButton" mnemonicParsing="false" text="%copy"/>
                                                <Button fx:id="rightMoveButton" mnemonicParsing="false" text="%move"/>
                                                <Button fx:id="rightDeleteButton" mnemonicParsing="false"
                                                        text="%delete"/>
                                            </children>
                                            <padding>
                                                <Insets left="5.0"/>
                                            </padding>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="3.0" top="3.0"/>
                                    </padding>
                                </AnchorPane>
                                <AnchorPane>
                                    <children>
                                        <Label text="%path" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="5.0"/>
                                        <TextField fx:id="pathRightField" maxWidth="1.7976931348623157E308"
                                                   AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="5.0"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="3.0"/>
                                    </padding>
                                </AnchorPane>
                                <TableView VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn prefWidth="75.0" text="%table.name"/>
                                        <TableColumn prefWidth="75.0" text="%table.size"/>
                                        <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0"
                                                     text="%table.date"/>
                                    </columns>
                                </TableView>
                            </children>
                            <padding>
                                <Insets top="3.0"/>
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </AnchorPane>
    </center>
</BorderPane>
